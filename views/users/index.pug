extends ../layouts/common
block content

	h1 User
	.d-flex.align-items-center
		form.ml-auto(class='form-inline', action='/user/search', method='GET')
			input(class='form-control', type='text', name='q')
			button(class='btn btn-primary') search
	
	table.table
		tr
			th Name
			th Phone
			th Actions
		each user in users
			tr
				td= user.name
				td= user.phone
				td
					a.btn.btn-light(href='/user/edit/' + user.id) Edit